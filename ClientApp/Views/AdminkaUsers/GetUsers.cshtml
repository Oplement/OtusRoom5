@using Authorization.Microservice.Domain;
@model List<User>
@{
    Layout = "_Layout";
}


<style>
    .users_container {
        background-color: #ACC8FF;
        width: contain;
        height: contain;
        position:relative;
        padding: 10px;
        margin: 30px;
        border-radius:5px;
    }
    .user{
        
    }

    .summary_users {
        font-size: 1.5em;
        position:relative;
        cursor:pointer;
        display:flex;
        justify-content:space-between;
        padding-left:50px;
        padding-right:50px;

    }
    .item{
        display: flex;
        align-items: center;
        justify-content: space-around;
        flex-wrap: wrap;
        font-size: 1.5em;
    }

    .form {
        background-color: #ACC8FF;
        width: 70%;
        margin: 30px auto;
        padding: 15px;
        border-radius: 8px;
        align-items: center;
    }

    .button {
        background-color: #fcfcfc;
        width: 12%;
        height: 5%;
        margin: 0px auto;
        border-radius: 5px;
    }

    .input1, textarea {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        width: 100%;
        height: 30px;
        border-radius: 3px;
    }
</style>


<div class="xz">
    <form method="post" action="/createuser/create" class="form" id="form1">

        <div class="form-group">
            <label for="username" class="labels">Имя пользователя:</label>
            <input type="text" id="username" name="username" class="input1">
        </div>

        <div class="form-group">
            <label for="email" class="labels">Email:</label>
            <input type="email" id="email" name="email" class="input1" >
        </div>    
        
        <div class="form-group">
            <label for="role" class="labels">Роль:</label>
            <input type="text" id="role" name="role" class="input1">
        </div>             
        
        <div class="form-group">
            <label for="password" class="labels">Пароль:</label>
            <input type="password" id="password" name="password" class="input1">
        </div>

        <button type="submit" class="button">Coздать</button>
    </form>

</div>

<div class="users_container">
    @for (int i = 0; i < Model.Count; i++)
    {
        var usingUser = Model[i];

        <div class="user">
            <details>
                <summary class="summary_users">
                    <div>Пользователь @usingUser.Username.ToString()</div> 
                    <div>В роли: @usingUser.Role.ToString()</div>
                </summary>
                <div class="item">
                    <p><a href="Аватар пользователя"><img src=@usingUser.ImagePath alt="Image" style="width:180px; height:180px; left:60px; top:60px; "></a></p>
                    <div class="email_user">@usingUser.Email.ToString()</div>
                    <div class="id_user">Id: @usingUser.Id.ToString()</div>
                </div>
            </details>
        </div>
    }

</div> 


